#
# bash alias configuration
#

# readability tweaks
alias ll = 'ls -lah'
alias df = 'df -h'
alias du = 'du -h -d 2'
alias grep = 'grep --color=auto'
alias rm = 'trash-cli'

# safety tweaks
alias cp = 'cp -i'
alias rm = 'trash'

# navigability tweaks
alias ..='cd ..'
alias ...='cd ..; cd ..'
alias ....='cd ..; cd ..; cd ..'


